<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Organizations</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/llanding.css"/>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <div id="title">
        <div class="title--grid">
            <h2>CampusCommerce</h2>
            <a id="signout" href="/signout">Sign Out</a>
        </div>
    </div>
    
    <div class="wrapper">
        <% if (boards && boards.length > 0) { %>
            <% boards.forEach(board => { %>
                <!-- Converted anchor tags to Bootstrap buttons -->
                <button type="button" class="btn btn-primary" onclick="location.href='/homepage?boardId=<%= encodeURIComponent(board.boardID) %>'">
                  <%= board.boardName %>
                </button>
            <% }); %>
        <% } else { %>
            <div>No clubs found.</div>
        <% } %>
    </div>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#formModal">
        Add a Club
    </button>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#formModal2">
        Join a Club
    </button>

    <!-- Modal -->
    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalLabel">Add a Club!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/addBoard">
                        <div class="form-group">
                            <label
                            for="exampleFormControlInput1">Club Name</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Club Name" required="true" name="boardName">
                        </div>
                        <div class="form-group">
                            <label
                            for="exampleFormControlInput1">Club Email</label>
                            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Club Email" required="true" name="boardEmail">
                        </div>
                        <div class="form-group">
                            <label
                            for="exampleFormControlInput1">Club Phone Number</label>
                            <input type="tel" class="form-control" id="exampleFormControlInput1" placeholder="Club Phone Number" required="true" name="boardPhone">
                        </div>
                        <div class="form-group">
                            <label
                            for="exampleFormControlInput1">Club Photo</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Club Photo" required="true" name="boardPhoto">
                        </div>
                        <div class="form-group">
                            <label
                            for="exampleFormControlInput1">Initial Budget</label>
                            <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Inital Budget" name="boardBudget">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Club Description</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="boardDescription"></textarea>
                        </div>
                        <input type="submit" value="Add Club">


                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Join modal -->
    <div class="modal fade" id="formModal2" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalLabel">Join a club</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/joinBoard">
                        <div class="form-group">
                            <label
                            for="exampleFormControlInput1">Enter Club Name:</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Club Code" required="true" name="boardName">
                        </div>
                        <input type="submit" value="Join Club">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="footercontainer">
        <div>
            <h3>Washington State <br>University</h3>
            <h6>all rights reserved CampusCommerce</h6>
        </div>
    </footer>
</body>
</html>
